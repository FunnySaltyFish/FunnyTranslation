<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f2f2f2">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="8dp">

		<TextView
			android:id="@+id/main_slide_right_source_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/language_source"
			android:textColor="#FF448AFF"
			/>

		<ImageButton
			android:id="@+id/main_slide_right_exchange_button"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginStart="4dp"
			android:layout_toEndOf="@id/main_slide_right_source_tv"
			android:background="#00000000"
			android:contentDescription="@string/description_exchange_language"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_exchange"
			android:layout_above="@id/main_slide_right_source_rv"
			android:tint="@color/colorPrimary" />

		<com.funny.translation.widget.LanguageRecyclerView
			app:check_kind="0"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/main_slide_right_source_tv"
			android:id="@+id/main_slide_right_source_rv"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/language_target"
			android:layout_below="@id/main_slide_right_source_rv"
			android:id="@+id/mainheaderTextView1"
			android:textColor="#FF448AFF"/>

		<com.funny.translation.widget.LanguageRecyclerView
			android:id="@+id/main_slide_right_target_rv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/mainheaderTextView1"
			app:check_kind="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/engine"
			android:layout_below="@id/main_slide_right_target_rv"
			android:id="@+id/mainheaderTextView2"
			android:textColor="#FF448AFF"/>

		<com.funny.translation.widget.LanguageRecyclerView
			app:check_kind="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/mainheaderTextView2"
			android:id="@+id/main_slide_right_engine_rv"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/mode"
			android:layout_below="@id/main_slide_right_tts_rv"
			android:id="@+id/mainheaderTextView4"
			android:textColor="#FF448AFF"/>

		<com.funny.translation.widget.LanguageRecyclerView
			app:check_kind="0"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/mainheaderTextView4"
			android:id="@+id/main_slide_right_mode_rv"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/tts"
			android:layout_below="@id/main_slide_right_engine_rv"
			android:id="@+id/mainheaderTextView3"
			android:textColor="#FF448AFF"/>

		<com.funny.translation.widget.LanguageRecyclerView
			android:id="@+id/main_slide_right_tts_rv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/mainheaderTextView3"
			app:check_kind="0" />

		<TextView
			android:id="@+id/main_slide_right_copyright"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/copyright"
			android:layout_below="@id/main_slide_right_mode_rv"
			android:gravity="center"
			android:layout_marginTop="8dp"
			android:textColor="#36000000"
			android:textSize="12sp"/>

	</RelativeLayout>

</ScrollView>

