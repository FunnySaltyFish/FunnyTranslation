<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/view_result_cardview"
	android:clickable="true"
	app:cardBackgroundColor="#FFFFFFFF"
	android:foreground="?android:attr/selectableItemBackground"
	app:cardCornerRadius="2dp"
	app:cardElevation="4dp"
	app:cardPreventCornerOverlap="true"
	android:layout_gravity="center|center_vertical|center_horizontal">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Text"
			android:id="@+id/view_result_content_text"
			android:textSize="16sp"
			android:gravity="left|center_vertical"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Text"
			android:layout_below="@id/view_result_content_text"
			android:textSize="12sp"
			android:layout_marginTop="4dp"
			android:id="@+id/view_result_content_engine"
			android:textColor="#36000000"
			android:gravity="left|center_vertical"/>

		<Button
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:layout_below="@id/view_result_content_text"
			android:layout_alignParentRight="true"
			android:background="@drawable/ic_copy"
			android:layout_marginTop="4dp"
			android:layout_marginRight="4dp"
			android:id="@+id/view_result_content_copy_button"/>

		<Button
			android:layout_marginTop="4dp"
			android:background="@drawable/ic_speak"
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:id="@+id/view_result_content_speak_button"
			android:layout_toLeftOf="@id/view_result_content_copy_button"
			android:layout_below="@id/view_result_content_text"
			android:layout_marginRight="8dp"
			android:gravity="center"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>

