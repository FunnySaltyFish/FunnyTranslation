<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:windowContentTransitions">false</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <!-- 前后两个页面是同步执行还是顺序执行, true为同步 -->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="MyButtonRippleWhite">
        <item name="android:colorControlHighlight">#81d4fa</item>
        <item name="android:radius">18dp</item>
    </style>
</resources>